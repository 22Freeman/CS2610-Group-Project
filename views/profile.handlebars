<form class="tn-main" action="profile/update" method="post">
  <h2>{{user.username}}</h2>
  <img class="tn-image" src="{{user.profile_picture}}" id="circle" height="140px" width="140px"></img>
  <input class="tn-username" type="text" name="username" value="{{user.username}}" placeholder="Username"></input>
  <input class="tn-name" type="text" name="full_name" value="{{user.full_name}}" placeholder="Full Name"></input>
  <input class="tn-website" type="text" size="30" name="website" value="{{user.website}}" placeholder="Website"></input>
  <textarea class = "tn-bio" cols="30" name="bio" rows="50" placeholder="Bio">{{user.bio}}</textarea>
  <button class="tn-button" type="submit">Save</button>
</form>


